---
const { title = 'CEOTR Ltd — Smart Business. Solid Execution.' } = Astro.props;
---
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="CEOTR Ltd — General contracting and business development." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="font-sans text-slate-900 bg-white">
    <header class="border-b border-slate-200 bg-white/70 backdrop-blur supports-backdrop-blur:backdrop-blur sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold tracking-tight text-brand-blue">CEOTR Ltd</a>
        <nav class="hidden md:flex gap-6 text-sm">
          <a class="hover:text-brand-blue" href="/services">Services</a>
          <a class="hover:text-brand-blue" href="/projects">Projects</a>
          <a class="hover:text-brand-blue" href="/testimonials">Testimonials</a>
          <a class="hover:text-brand-blue" href="/contact">Contact</a>
          <a class="hover:text-brand-blue" href="/blog">Blog</a>
        </nav>
        <a href="/contact" class="rounded-2xl bg-brand-blue text-white px-4 py-2 text-sm shadow hover:bg-slate-900 transition">Work with us</a>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-20 border-t border-slate-200">
      <div class="max-w-7xl mx-auto px-4 py-10 text-sm text-slate-600 flex flex-col md:flex-row items-center justify-between">
        <p>© {new Date().getFullYear()} CEOTR Ltd. All rights reserved.</p>
        <p class="opacity-80">Smart Business. Solid Execution.</p>
      </div>
    </footer>
  </body>
</html>
