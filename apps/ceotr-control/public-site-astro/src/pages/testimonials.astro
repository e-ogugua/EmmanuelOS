---
import BaseLayout from "../layouts/BaseLayout.astro";
import '../styles/global.css'
---
<BaseLayout title="Testimonials — CEOTR Ltd">
  <section class="section">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="section-title">Testimonials</h1>
      <div class="grid md:grid-cols-2 gap-6">
        {[1,2,3,4].map((i) => (
          <blockquote class="card p-6">
            <p class="text-slate-700">“CEOTR delivered beyond expectations.”</p>
            <footer class="mt-3 text-sm text-slate-500">Client {i}</footer>
          </blockquote>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
